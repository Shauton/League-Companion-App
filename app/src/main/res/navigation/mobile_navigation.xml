<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/mobile_navigation"
            app:startDestination="@+id/navigation_home">

    <fragment
            android:id="@+id/navigation_home"
            android:name="com.example.leaguecompanionapp.ui.home.HomeFragment"
            android:label="@string/title_home"
            tools:layout="@layout/fragment_home"/>

    <fragment
            android:id="@+id/navigation_dashboard"
            android:name="com.example.leaguecompanionapp.ui.dashboard.DashboardFragment"
            android:label="@string/champ_select"
            tools:layout="@layout/fragment_dashboard"/>

    <fragment
            android:id="@+id/navigation_profile"
            android:name="com.example.leaguecompanionapp.ui.profile.ProfileFragment"
            android:label="@string/profile"
            tools:layout="@layout/fragment_profile"/>

    <fragment
            android:id="@+id/navigation_login"
            android:name="com.example.leaguecompanionapp.ui.login.LoginFragment"
            android:label="@string/login_page"
            tools:layout="@layout/fragment__login"/>

    <fragment
            android:id="@+id/navigation_signup"
            android:name="com.example.leaguecompanionapp.ui.signup.SignUpFragment"
            android:label="@string/register"
            tools:layout="@layout/fragment_sign_up"/>

</navigation>