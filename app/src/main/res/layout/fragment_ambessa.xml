<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/champselect"
        android:orientation="vertical"
        tools:context=".AmbessaFragment">


    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:backgroundTint="@color/transparent"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:padding="10dp">


            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:cardBackgroundColor="@color/royal_blue"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    app:cardElevation="20dp"
                    app:cardCornerRadius="30dp">

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:elevation="20dp"
                        android:background="@drawable/ambessa_splash"/>

            </androidx.cardview.widget.CardView>


            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ambessa"
                    android:textSize="36dp"
                    android:textColor="@color/white"
                    android:gravity="center"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Matriarch of War"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:gravity="center"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Ambessa_blurb"
                    android:textColor="@color/white"
                    android:paddingTop="16dp"/>

            <Button
                    android:id="@+id/learnmore_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/yellow"
                    android:textColor="@color/royal_blue"
                    android:text="Lore Drop"
                    android:textSize="16dp"
                    android:elevation="20dp"
                    android:layout_gravity="center"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>